# PostgreSQL
POSTGRES_PASSWORD=your-secure-password

# Session (required)
SESSION_SECRET=your-session-secret-change-this

# OIDC Authentication (optional - leave empty to disable)
OIDC_ISSUER=
OIDC_CLIENT_ID=
OIDC_CLIENT_SECRET=
OIDC_REDIRECT_URI=http://localhost:8080/auth/callback

# Application
LOG_LEVEL=INFO
HTTP_PORT=8080

# Data retention defaults (can be changed in admin UI)
DEFAULT_POLL_INTERVAL=300
DEFAULT_RETENTION_DAYS=30
